<div class='scene w-full h-full' ...attributes
    {{did-insert this.didInsert}}
    {{on-window-resize this.resize}}
    {{visibility-detector container=@container onEnter=this.onEnter onLeave=this.onLeave}}>
    {{yield this}}
</div>
{{#if this.isLoading}}
<div class='absolute top-0 left-0 w-full h-full bg-black bg-opacity-80 flex items-center rounded-lg'>
    <div class='mx-40 flex-1 h-2 rounded-lg bg-blue-300 shadow-lg'>
        <div class='h-full rounded-lg bg-blue-500' style='width: {{this.loadingProgress}}%;'/>
    </div>
</div>
{{/if}}